@{
    ViewData["Title"] = "Контакти - MedReports";
}

<!-- Contact Header -->
<div class="container-fluid px-0" style="background: linear-gradient(135deg, #f5f7ff 0%, #ffffff 100%); padding: 60px 40px;">
    <div class="container text-center">
        <h1 style="font-size: 2.5rem; font-weight: 900; margin-bottom: 1rem;">Свържете се с нас</h1>
        <p style="font-size: 1.1rem; color: #666;">Изпратете ни вашето запитване и щё отговорим възможно най-скоро</p>
    </div>
</div>

<!-- Contact Section -->
<div class="container py-5">
    <div class="row g-4">
        <!-- Left Column - Contact Form -->
        <div class="col-lg-6">
            <form asp-action="Contact" method="post" style="display: flex; flex-direction: column; gap: 1.5rem;">
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #000;">Име *</label>
                    <input name="Name" type="text" style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #e5e7eb; border-radius: 0.375rem; font-family: inherit;" placeholder="Вашето име" required>
                </div>
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #000;">Имейл *</label>
                    <input name="Email" type="email" style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #e5e7eb; border-radius: 0.375rem; font-family: inherit;" placeholder="Ваш имейл" required>
                </div>
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #000;">Телефон</label>
                    <input name="Phone" type="tel" style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #e5e7eb; border-radius: 0.375rem; font-family: inherit;" placeholder="Ваш телефон">
                </div>
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #000;">Тема *</label>
                    <input name="Subject" type="text" style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #e5e7eb; border-radius: 0.375rem; font-family: inherit;" placeholder="Тема на запитването" required>
                </div>
                <div>
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 600; color: #000;">Съобщение *</label>
                    <textarea name="Message" style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #e5e7eb; border-radius: 0.375rem; font-family: inherit; min-height: 150px; resize: vertical;" placeholder="Вашето съобщение" required></textarea>
                </div>
                <button type="submit" style="padding: 0.75rem 2rem; background: #0052CC; color: white; border: none; border-radius: 0.375rem; font-weight: 600; cursor: pointer; font-size: 1rem;">
                    Изпрати съобщение
                </button>
            </form>
        </div>

        <!-- Right Column - Contact Info -->
        <div class="col-lg-6">
            <!-- Address -->
            <div style="background: white; padding: 1.5rem; border: 1px solid #e5e7eb; border-radius: 0.75rem; margin-bottom: 1.5rem; display: flex; gap: 1rem;">
                <div style="flex-shrink: 0;">
                    <div style="width: 50px; height: 50px; background: #0052CC; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2C7.58 2 4 5.58 4 10C4 15.25 12 22 12 22S20 15.25 20 10C20 5.58 16.42 2 12 2ZM12 12.5C10.62 12.5 9.5 11.38 9.5 10C9.5 8.62 10.62 7.5 12 7.5C13.38 7.5 14.5 8.62 14.5 10C14.5 11.38 13.38 12.5 12 12.5Z" fill="white"/>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 style="margin: 0 0 0.5rem 0; font-weight: 700; color: #000;">Адрес</h3>
                    <p style="margin: 0; color: #666;">гр. София, бул. Витоша 123</p>
                </div>
            </div>

            <!-- Phone -->
            <div style="background: white; padding: 1.5rem; border: 1px solid #e5e7eb; border-radius: 0.75rem; margin-bottom: 1.5rem; display: flex; gap: 1rem;">
                <div style="flex-shrink: 0;">
                    <div style="width: 50px; height: 50px; background: #0052CC; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M6.62 10.79C1.49 5.56 1.49 5.56 6.62 10.79M17.38 13.21C12.25 17.44 12.25 17.44 17.38 13.21M20.01 3H3.99C2.89 3 2 3.9 2 5V19C2 20.1 2.89 21 3.99 21H20.01C21.1 21 22 20.1 22 19V5C22 3.9 21.1 3 20.01 3ZM19.05 18.36H4.95V5.64H19.05V18.36Z" fill="white"/>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 style="margin: 0 0 0.5rem 0; font-weight: 700; color: #000;">Телефон</h3>
                    <p style="margin: 0; color: #666;">+359 2 123 4567</p>
                </div>
            </div>

            <!-- Email -->
            <div style="background: white; padding: 1.5rem; border: 1px solid #e5e7eb; border-radius: 0.75rem; margin-bottom: 1.5rem; display: flex; gap: 1rem;">
                <div style="flex-shrink: 0;">
                    <div style="width: 50px; height: 50px; background: #0052CC; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 6L12 10.7L4 6H20ZM20 18H4V8L12 12.7L20 8V18Z" fill="white"/>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 style="margin: 0 0 0.5rem 0; font-weight: 700; color: #000;">Имейл</h3>
                    <p style="margin: 0; color: #666;">info@medreports.bg</p>
                </div>
            </div>

            <!-- Working Hours -->
            <div style="background: white; padding: 1.5rem; border: 1px solid #e5e7eb; border-radius: 0.75rem; display: flex; gap: 1rem;">
                <div style="flex-shrink: 0;">
                    <div style="width: 50px; height: 50px; background: #0052CC; border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 20C7.59 20 4 16.41 4 12C4 7.59 7.59 4 12 4C16.41 4 20 7.59 20 12C20 16.41 16.41 20 12 20ZM12.5 7H11V13L16.2 16.2L17 14.9L12.5 12.2V7Z" fill="white"/>
                        </svg>
                    </div>
                </div>
                <div>
                    <h3 style="margin: 0 0 0.5rem 0; font-weight: 700; color: #000;">Работно време</h3>
                    <p style="margin: 0; color: #666;">Пон-Пет: 9:00-18:00</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Map Section -->
<div class="container-fluid px-0" style="padding: 40px; background-color: #f9fafb;">
    <div style="height: 400px; background-color: #e5e7eb; border-radius: 1rem; display: flex; align-items: center; justify-content: center; color: #9ca3af;">
        <div style="text-align: center;">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin: 0 auto 1rem; opacity: 0.5;">
                <path d="M12 2C7.58 2 4 5.58 4 10C4 15.25 12 22 12 22S20 15.25 20 10C20 5.58 16.42 2 12 2ZM12 12.5C10.62 12.5 9.5 11.38 9.5 10C9.5 8.62 10.62 7.5 12 7.5C13.38 7.5 14.5 8.62 14.5 10C14.5 11.38 13.38 12.5 12 12.5Z" fill="currentColor"/>
            </svg>
            <p style="font-size: 1.1rem; margin: 0;">Google Maps интеграция</p>
        </div>
    </div>
</div>
