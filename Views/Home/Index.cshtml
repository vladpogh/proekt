@{
    ViewData["Title"] = "MedReports - Системи за електрически досиета";
}

<!-- Breadcrumb/Badge Section -->
<div class="py-3 px-4">
    <div class="badge bg-light text-primary" style="font-size: 0.85rem; padding: 0.5rem 1rem;">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg" class="me-1" style="display: inline;">
            <rect width="16" height="16" rx="4" fill="currentColor" opacity="0.1"/>
            <path d="M8 3L11 9H5L8 3Z" fill="currentColor"/>
        </svg>
        Иновативни електрически решения
    </div>
</div>

<!-- Hero Section -->
<div class="container-fluid px-0">
    <div style="background: linear-gradient(135deg, #f5f7ff 0%, #ffffff 100%); padding: 60px 40px;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 style="font-size: 3.5rem; font-weight: 900; line-height: 1.2; margin-bottom: 1.5rem; color: #000;">
                        Системи за<br/>електрически<br/>досиета
                    </h1>
                    <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">
                        Професионални решения за индустриални и офисни сгради. Качество, сигурност и иновации в една система.
                    </p>
                    <div class="d-flex gap-3">
                        <button class="btn btn-primary btn-lg" style="padding: 0.75rem 2rem; border-radius: 0.375rem;">
                            Разгледайте продуктите →
                        </button>
                        <button class="btn btn-outline-secondary btn-lg" style="padding: 0.75rem 2rem; border-radius: 0.375rem;">
                            Свържете се с нас
                        </button>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="https://images.unsplash.com/photo-1581092918056-0c4c3acd3789?w=600&h=400&fit=crop" alt="Електрически системи" style="width: 100%; max-width: 500px; border-radius: 1rem; box-shadow: 0 20px 50px rgba(0,0,0,0.1);">
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div style="font-size: 2.5rem; font-weight: 900; color: #0052CC;">500+</div>
            <div style="color: #666; margin-top: 0.5rem;">Проекта</div>
        </div>
        <div class="col-md-4 mb-4">
            <div style="font-size: 2.5rem; font-weight: 900; color: #0052CC;">15+</div>
            <div style="color: #666; margin-top: 0.5rem;">Години опит</div>
        </div>
        <div class="col-md-4 mb-4">
            <div style="font-size: 2.5rem; font-weight: 900; color: #0052CC;">99%</div>
            <div style="color: #666; margin-top: 0.5rem;">Удовлетворени клиенти</div>
        </div>
    </div>
</div>
