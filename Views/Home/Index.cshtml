@{
    ViewData["Title"] = "Lovable - Системи за медицински досиета";
}

<!-- Hero Section -->
<div class="container-fluid px-0">
    <div style="background: linear-gradient(135deg, #e8f0ff 0%, #f0f4ff 100%); padding: 80px 40px;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <!-- Badge -->
                    <div style="display: inline-flex; align-items: center; gap: 8px; background: rgba(59, 130, 246, 0.1); padding: 8px 16px; border-radius: 20px; margin-bottom: 32px;">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="#3b82f6"/>
                        </svg>
                        <span style="color: #3b82f6; font-weight: 600;">Иновативни медицински решения</span>
                    </div>
                    
                    <h1 style="font-size: 3.5rem; font-weight: 900; line-height: 1.2; margin-bottom: 1.5rem; color: #000;">
                        Системи за<br/>медицински<br/>досиета
                    </h1>
                    <p style="font-size: 1.1rem; color: #666; margin-bottom: 2rem; line-height: 1.6;">
                        Професионални решения за здравни заведения и клиники. Качество, сигурност и иновации в една система.
                    </p>
                    <div class="d-flex gap-3">
                        <a asp-area="" asp-controller="Home" asp-action="Products" class="btn btn-primary btn-lg" style="padding: 0.75rem 2rem; border-radius: 0.375rem; text-decoration: none; font-weight: 600;">
                            Разгледайте продуктите →
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Contact" class="btn btn-light btn-lg" style="padding: 0.75rem 2rem; border-radius: 0.375rem; text-decoration: none; font-weight: 600;">
                            Свържете се с нас
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="/images/medical-system.svg" alt="Медицински досиета система" style="width: 100%; max-width: 520px; border-radius: 1rem; box-shadow: 0 20px 60px rgba(0,0,0,0.15);">
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Stats Section -->
<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div style="font-size: 2.5rem; font-weight: 900; color: #3b82f6;">500+</div>
            <div style="color: #666; margin-top: 0.5rem;">Проекта</div>
        </div>
        <div class="col-md-4 mb-4">
            <div style="font-size: 2.5rem; font-weight: 900; color: #3b82f6;">15+</div>
            <div style="color: #666; margin-top: 0.5rem;">Години опит</div>
        </div>
        <div class="col-md-4 mb-4">
            <div style="font-size: 2.5rem; font-weight: 900; color: #3b82f6;">99%</div>
            <div style="color: #666; margin-top: 0.5rem;">Удовлетворени</div>
        </div>
    </div>
</div>
